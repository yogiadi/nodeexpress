<% include ../partials/header_user %> 
<div class="container">
    <div class="row">
<h1 style="text-align:center;">Edit profile</h1>
<div style="width: 30%; margin: 25px auto;">
<form action="/users/<%=currentUser._id%>/" method="POST">
    <!--<input type="text" name="user[firstname]" placeholder="First Name">-->
    <!--<input type="text" name="user[lastname]" placeholder="Last Name">-->
    <div class="form-group">
    <label>Email:</label>
    <input class="form-control" type="email" name="user[email]" placeholder="Email" value="<%=currentUser.email%>">
    </div>
    <div class="form-group">
    <label>Location:</label>
    <input class="form-control" type="text" name="user[location]" placeholder="Location" value="<%=currentUser.location%>">
    </div>
    <div class="form-group">
    <label>Expert:</label>
    <input class="form-control" type="text" name="user[expert]" placeholder="Expert" value="<%=currentUser.expert%>">
    </div>
    <div class="form-group">
    <label>Keyword :</label>
    <input class="form-control" type="text" name="user[keyword]" placeholder="Enter keywords to improve your search" value="<%=currentUser.keyword%>">
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Edit</button>
    </div>
</form>
</div>
</div>
</div>
<% include ../partials/footer %> 
