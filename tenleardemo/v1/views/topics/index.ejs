<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Tenlear!</h1>
             <p>View our hand-picked topics from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/topics/new">Add New Topic</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% topics.forEach(function(topic){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= topic.image %>">
                   <div class="caption">
                       <h4><%= topic.name %></h4>
                   </div>
                   <p>
                       <a href="/topics/<%= topic._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
