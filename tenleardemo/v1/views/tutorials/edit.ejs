<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Tutorial</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/topics/<%= topic_id %>/tutorials/<%= tutorial._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="tutorial[text]" value="<%= tutorial.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/topics">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

