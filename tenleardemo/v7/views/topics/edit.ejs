<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= topic.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/topics/<%= topic._id %>?_method=PUT" method="POST">
                <div class="form-group">
                   <label>Title:</label>
                    <input class="form-control" type="text" name="topic[name]" value="<%= topic.name %>" required>
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name="topic[image]" value="<%= topic.image %>">-->
                <!--</div>-->
                <div class="form-group">
                    <label>Description:</label>
                    <input class="form-control" type="text" name="topic[description]" value="<%= topic.description %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/topics">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

