<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new comment to <%= campground.name%></h1>
        <div style="width : 30%; margin: 0 auto;">
        <form action="/campground/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]">
            </div>
         
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"type="Submit">Submit</button>
            </div>
        </form>
        <a href="/campground">Go Back!</a>
        </div>
        
    </div>
</div>